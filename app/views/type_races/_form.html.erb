<br><br>
<span id="text"><%= @templates.text %></span>
<!--Display only those users who are logged in-->
<% User.all.each do |user|%>
  <div id = "barProgress">
    <div  class = "newBar" id="newBar<%= user.id %>">
      <%=image_tag "car.jpg" ,width:50, height:42, class: "pull-right"%>
    </div>
    <span>User<%=user.id%></span>
  </div>
  <br>
<% end %>

<%= form_with(model:@type_racer,local:true) do |form| %>
  <div class="field">
    <%= form.text_area :text_area, id: :template_text, remote:true %>
    <span class ="match"> </span>
    <span class ="unmatch"></span>
  </div>
  <div class="hiddenField">
    <input type="hidden" id="text_id" value="<%= @type_race.id %>">
  </div>
<% end %>

<button >Start</button>
<% User.all.each do |user| %>
  <div>
    <p>User<%= user.id%>WPM : <span id="checkWpm"> 0 </span></p>
  </div>
  <div class="hidden" id="showAccuracy">
    <p >User<%= user.id%>Accuracy : <span id="accuracy"> 0 </span></p>
  </div>
  <br>
<% end %>



<div id="result"></div>

